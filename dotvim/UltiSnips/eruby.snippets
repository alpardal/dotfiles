extends html

snippet % "erb block" i
<%= $1 %>$0
endsnippet

snippet end "erb block" i
<% end %>$0
endsnippet

snippet if "erb if" i
<% if $1 %>
	$2
<% end %>$0
endsnippet

snippet ife "erb if" i
<% if $1 %>
	$2
<% else %>
	$3
<% end %>$0
endsnippet

snippet %- "erb block" i
<% $1 %>$0
endsnippet

snippet %t "erb block" i
<%=t $1 %>$0
endsnippet

snippet %18 "I18n.t block" i
<%= I18n.t("$1") %>$0
endsnippet
